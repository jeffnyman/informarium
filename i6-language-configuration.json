{
  "comments": {
    "lineComment": "!"
  },
  "brackets": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ]
  ],
  "autoClosingPairs": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ],
    {
      "open": "'",
      "close": "'",
      "notIn": ["string", "comment"]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["string"]
    }
  ],
  "surroundingPairs": [
    [
      "(",
      ")"
    ],
    [
      "[",
      "]"
    ],
    [
      "{",
      "}"
    ],
    [
      "'",
      "'"
    ],
    [
      "\"",
      "\""
    ]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\!(-begin)\\b",
      "end": "^\\s*\\!(-end)\\b"
    }
  },
  "onEnterRules": [
    {
      "beforeText": "\\[[^\\]]+$",
      "afterText": "^\\]\\s*[;,]?$",
      "action": { "indent": "indentOutdent" }
    },
    {
      "beforeText": "\\[[^\\]]+$",
      "action": { "indent": "indent" }
    }
  ]
}
