{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.inform7",
  "name": "Inform 7",
  "patterns": [
    {
      "include": "#title"
    },
    {
      "include": "#body"
    }
  ],
  "repository": {
    "title": {
      "begin": "^\".*$",
      "beginCaptures": {
        "0": {
          "name": "markup.heading.inform7 markup.underline.inform7"
        }
      },
      "end": "(?=\\s*^.*)"
    },
    "body": {
      "begin": "(?=.)",
      "end": "\\z",
      "patterns": [
        {
          "include": "#source"
        }
      ]
    },
    "source": {
      "patterns": [
        {
          "include": "#comment"
        }
      ]
    },
    "comment": {
      "name": "comment.block.inform7",
      "begin": "\\[",
      "end": "\\]"
    }
  }
}
