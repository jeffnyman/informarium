{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.inform7",
  "name": "Inform 7",
  "patterns": [
    {
      "include": "#title"
    },
    {
      "include": "#body"
    }
  ],
  "repository": {
    "title": {
      "begin": "^\".*$",
      "beginCaptures": {
        "0": {
          "name": "markup.heading.inform7 markup.underline.inform7"
        }
      },
      "end": "(?=\\s*^.*)"
    },
    "body": {
      "begin": "(?=.)",
      "end": "\\z",
      "patterns": [
        {
          "include": "#source"
        }
      ]
    },
    "source": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#text"
        }
      ]
    },
    "comment": {
      "name": "comment.block.inform7",
      "begin": "\\[",
      "beginCaptures": {
        "0": {
          "name": "punctuation.bracket.open.inform7"
        }
      },
      "end": "\\]",
      "endCaptures": {
        "0": {
          "name": "punctuation.bracket.close.inform7"
        }
      },
      "patterns": [
        {
          "include": "#nestedComment"
        }
      ]
    },
    "nestedComment": {
      "begin": "\\[",
      "end": "\\]",
      "patterns": [
        {
          "include": "#nestedComment"
        }
      ]
    },
    "text": {
      "name": "string.quoted.double.inform7",
      "begin": "\"",
      "end": "\""
    }
  }
}
